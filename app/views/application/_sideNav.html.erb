<div class="off-canvas-wrap fixed" data-offcanvas>
	<div class="inner-wrap">
		<div class = "show-for-small-only">
			<!-- MOBILE NAV BAR -->
			<div class = "fixed">
				<nav class="tab-bar show-for-small-only">
					<section class="right-small">
						<a class="right-off-canvas-toggle menu-icon" href="#"><span></span></a>
					</section>
				</nav>
			</div>

			<% @user = current_user %>

			<!-- MOBILE NAVIGATION OFFCANVAS LIST -->
			<aside class="right-off-canvas-menu" aria-hidden="true">
				<ul class="off-canvas-list">
					<li><label><%= @user.email %></label></li>
					<li>
						<% if @user.homepage_info != nil %> 
						<%= link_to 'Landing Page', edit_homepage_info_path(@user.homepage_info), data: { no_turbolink: true } %> 
						<% else %> 
						<%= link_to 'Landing Page', new_homepage_info_path, data: { no_turbolink: true } %>  
						<% end %>
					</li>
					<li>
						<% if @user.personal_info != nil %> 
						<%= link_to 'Personal Info', edit_personal_info_path(@user.personal_info), data: { no_turbolink: true } %> 
						<% else %> 
						<%= link_to 'Personal Info', new_personal_info_path, data: { no_turbolink: true } %>  
						<% end %>
					</li>
					<li>
						<%= link_to "Projects", projects_path, data: { no_turbolink: true } %>
					</li>

					<li>
						<%= link_to "Reading List", articles_path, data: { no_turbolink: true } %>
					</li>
					<li>
						<%= link_to "Photos", edit_photo_path(@user.photos), data: { no_turbolink: true } %>
					</li>
					<li>
						<% if @user.social_link != nil %> 
						<%= link_to 'Social Links', edit_social_link_path(@user.social_link), data: { no_turbolink: true } %> 
						<% else %> 
						<%= link_to 'Social Links', new_social_link_path, data: { no_turbolink: true } %>  
						<% end %>
					</li>
					<li>
						<% if @user.website_setting != nil %> 
						<%= link_to 'Settings', edit_website_setting_path(@user.website_setting), data: { no_turbolink: true } %> 
						<% else %> 
						<%= link_to 'Settings', new_website_setting_path, data: { no_turbolink: true } %>  
						<% end %>
					</li>
					<li class = "alt">
						<% if valid_user(@user) %>
						<i></i><i></i><%= link_to('View Website', user_path(@user), data: { no_turbolink: true }) %>
						<% end %>
					</li>

					<li>
						<%= link_to "Account Settings", edit_user_registration_path %>
					</li>
					<li>
						<%= link_to 'Logout', destroy_user_session_path, :method => :delete %>
					</li>
				</ul>

			</aside>
			<!-- END MOBILE NAV OFFCANVAS -->
		</div>



		<div class = "show-for-medium-up medium-3 columns nav no-padding sidebar">
			<div class = "small-12 columns text-center logo-column no-padding">
				<div class = "logo">
					<%= link_to image_tag("brandclub_logo.png"), "/", data: { no_turbolink: true } %>
				</div>
			</div>
			<div class = "small-12 columns small-centered links no-padding">

				<ul id="my-menu" class = "no-bullet">
				

					<li class = "<%= active_class(user_dashboard_path(@user)) %>"><%= link_to user_dashboard_path(@user) do %><span class="fa fa-tachometer" aria-hidden="true"></span> Dashboard <% end %></li> 

					<!-- Start Website Content Submenu -->
					<li>
						<%= link_to edit_homepage_info_path(@user.homepage_info) do %><span class="fa fa-pencil-square-o" aria-hidden="true"></span> Website Content <% end %>
						<ul class = "no-bullet subclass">

							<li class="<%= active_class(edit_homepage_info_path(@user.homepage_info)) %>">
								<%= link_to edit_homepage_info_path(@user.homepage_info) do %><span class="fa fa-eye" aria-hidden="true"></span> Landing Page <% end %>
							</li>

							<li class="<%= active_class(edit_personal_info_path(@user.personal_info)) %>">
								<%= link_to edit_personal_info_path(@user.personal_info) do %><span class="fa fa-user" aria-hidden="true"></span> Personal Info <% end %>
							</li>

							<li class="<%= active_class(projects_path) %>">
									<%= link_to projects_path do %><span class="fa fa-folder-open-o" aria-hidden="true"></span> Projects <% end %>
							</li>

							<li class="<%= active_class(articles_path) %>">
								<%= link_to articles_path do %><span class="fa fa-newspaper-o" aria-hidden="true"></span> Reading List <% end %>
							</li>

							<li class="<%= active_class(photos_path) %>">
								<%= link_to photos_path do %><span class="fa fa-picture-o" aria-hidden="true"></span> Photos <% end %>
							</li>

							<li class="<%= active_class(edit_social_link_path(@user.social_link)) %>">
								<%= link_to edit_social_link_path(@user.social_link) do %><span class="fa fa-linkedin" aria-hidden="true"></span> Social Links <% end %>
							</li>

							<li class="<%= active_class(edit_website_setting_path(@user.website_setting)) %>">
								<%= link_to edit_website_setting_path(@user.website_setting)  do %><span class="fa fa-cog" aria-hidden="true"></span> Settings <% end %>
							</li>

						</ul>
					</li>
					<!-- End website content submenu -->
					<li class="<%= active_class(edit_website_setting_path(@user.website_setting)) %>">
						<%= link_to edit_website_setting_path(@user.website_setting)  do %><span class="fa fa-terminal" aria-hidden="true"></span> Domain Name <% end %>
					</li>

					<li class="<%= active_class(edit_user_path(@user)) %>">
						<%= link_to edit_user_path(@user)  do %><span class="fa fa-plus" aria-hidden="true"></span> Candidate Profile <% end %>
					</li>
					<li class = "<%= active_class(edit_user_path(@user)) %>">
						<%= link_to edit_user_path(@user) do %><span class="fa fa-line-chart" aria-hidden="true"></span> Google Analytics <% end %>
					</li> 
					<li class = "<%= active_class(user_feed_path(@user)) %>">
						<%= link_to user_feed_path(@user) do %><span class="fa fa-users" aria-hidden="true"></span> Social Feed <% end %>
					</li> 

	         <li class = "alt">
           <% if valid_user(@user) %>
 						<%= link_to user_path(@user) do %><span class="fa fa-bookmark" aria-hidden="true"></span> View Your Website <% end %>
           <% end %>
         </li>


				</ul>


			</div>
		</div>
