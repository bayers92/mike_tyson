<% current_user.projects.each do |project| %>
<div class = "row">
  <div class = "small-12 small-centered columns" id = "projects">
    <small>
      <%= link_to 'Edit Project', edit_project_path(project) %> | 
      <%= link_to 'Delete Project', project, method: :delete, data: { confirm: 'Are you sure?' } %>
    </small>
    <h4> <%= project.title %> </h4>
    <p> <%= project.paragraph %></p>

    <% if project.file1? %>
    <a href="<%= project.file1.url() %>">
      <% if project.file1_type == 0 %>
      <i class="fa fa-file-word-o fa-2x"></i> 
      <% elsif project.file1_type == 1 %>
      <i class="fa fa-file-excel-o fa-2x"></i> 
      <% elsif project.file1_type == 2 %>
      <i class="fa fa-file-powerpoint-o fa-2x"></i> 
      <% else %>
      <i class="fa fa-file-pdf-o fa-2x"></i> 
      <% end %>
      &nbsp; <%= project.file1_title %>
    </a><br/>
    <% end %>

    <% if project.file2? %>
    <a href="<%= project.file1.url() %>">
      <% if project.file2_type == 0 %>
      <i class="fa fa-file-word-o fa-2x"></i> 
      <% elsif project.file2_type == 1 %>
