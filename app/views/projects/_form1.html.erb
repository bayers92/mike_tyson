<%= simple_form_for(@project) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<%= f.input :title, label: 'Title:' %>
  	<%= f.input :paragraph, label: 'Description:' %>
  	<%= f.input :file1, label: 'Background Image:' %>
    <br/>
    <p><i> You can have the project image link to either a website or file: </i></p>
    <%= f.input :url, label: 'URL Link:' %>
    <%= f.input :file2, label: 'File Link:' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
