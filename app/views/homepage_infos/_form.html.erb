<%= simple_form_for(@homepage_info) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<%= f.input :homepage_display_name, label: 'Display Name:' %>
    <%= f.input :homepage_header, label: 'Subtitle Text:' %>
    <%= f.input :homepage_pic, label: 'Background Image:' %>
    <% if @homepage_info.homepage_pic? %>
    	<%= image_tag @homepage_info.homepage_pic.url(:med) %>
    	<br/><br/>
	<% end %>
  </div>

  <div class="form-actions">
    <br/>
    <%= f.button :submit %>
  </div>
<% end %>
