  </head>

  <body>
    <% if current_admin != nil %>
      <%= link_to 'Admin Logout', destroy_admin_session_path, :method => :delete %>
    <% end %>
    
    <%= yield %>
    <%= javascript_include_tag "application", 'data-turbolinks-track' => true %>
