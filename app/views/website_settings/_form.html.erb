<%= simple_form_for(@website_setting) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<%= f.input :domain_name, label: "Desired Domain Name:" %><br/>
	<label class = "string optional">Select Theme Color:</p>
  	<%= f.collection_radio_buttons :color, [[0, "Orange"] ,[1, 'Green'], [2, 'Light Blue'], [4, 'Light Red'], [3, 'Purple'], [5, 'Cornell Red']], :first, :last%>
  </div>

  <div class="form-actions">
   <%= f.button :submit, 'Save' %>
  </div>
<% end %>
