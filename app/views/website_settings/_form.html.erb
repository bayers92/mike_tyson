

<%= simple_form_for(@website_setting) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

	<label class = "string optional">Select Your Website Color:</p>
  	<%= f.collection_radio_buttons :color, [[0, 'Orange'] ,[1, 'Green'], [2, 'Light Blue'], [4, 'Light Red'], [3, 'Purple'], [5, 'Cornell Red']], :first, :last%>
  </div>
  <br/>

  <div class="form-actions">
   <%= f.button :submit, 'Save' %>
   <a href="/domains/<%= current_user.domain.id %>/edit" class = "buttonNext"> Next  <i class="fa fa-arrow-right"></i> </a>
  </div>
<% end %>
