<div class = "row edit-page">
  <%= render 'application/sideNav'%>
  <div class = "small-12 medium-9 columns form-yield no-padding">
    <%= render 'application/topNav' %>
    <%= render 'application/alerts' %>
          <div class = "small-12 medium-9 columns edit-content-section">
      <h2>Edit <%= resource_name.to_s.humanize %></h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.association :school, as: :hidden %>
        <%= f.input :email, required: true, autofocus: true, disabled: true %>



    <%= f.association :school, label: 'Select your school:', disabled: true, hint: "You cannot change your username." %>
    <%= f.input :gradyear, collection: 2015..2019, label: 'Year of Graduation:' %>
    <br/>


    <%= f.input :industry_list, as: :check_boxes, collection: Industry.all.all.order('name ASC'), value_method: :name, label_method: :name, input_html: { multiple: true, class: 'taggable' }, label: "Select your concentration(s):"%>

    <br/><br/>

  <%= f.input :career_list, as: :check_boxes, collection: Career.all.all.order('name ASC'), value_method: :name, label_method: :name, input_html: { multiple: true, class: 'taggable' }, label: "Select your career focus:"%>

    <br/>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>

        <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true %>

        <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false, label: "New Password (leave blank if you don't want to change it)" %>
        <%= f.input :password_confirmation, required: false, label: "New Password confirmation" %>
        
      </div>

      <div class="form-actions">
        <br/>
        <%= f.button :submit, "Update" %>
      </div>
      <% end %>

      <p>
       <i class="fa fa-trash-o fa-1x"></i> <%= link_to "   Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>
     </p>

     <%= link_to "Back", :back %>
   </div>
 </div>
</div>
