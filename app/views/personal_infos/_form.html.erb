<%= simple_form_for(@personal_info) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	    <%= f.input :name_first, label: 'First Name:' %>
  	    <%= f.input :name_last, label: 'Last Name:' %>
  	    <%= f.input :about_pic, label: 'Headshot Picture:' %>
        <% if @personal_info.about_pic? %>
          <%= image_tag @personal_info.about_pic.url(:med) %>
          <br/><br/>
        <% end %>
  	    <%= f.input :intro_paragraph, label: 'Intro paragraph:' %>
  	    <%= f.input :resume, label: 'Resume:' %>
        <% if @personal_info.resume? %>
          <a href = "<%= @personal_info.resume.url() %>"><i class="fa fa-paperclip fa-1x"></i> &nbsp; View Full Resume </a><br/><br/>
        <% end %>
  </div>

  <div class="form-actions">
    <br/>
    <%= f.button :submit %>
  </div>
<% end %>
