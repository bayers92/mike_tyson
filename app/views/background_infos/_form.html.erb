<%= simple_form_for(@background_info) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.collection_radio_buttons :background_type, [[0, 'Experience'] ,[1, 'Education']], :first, :last %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
