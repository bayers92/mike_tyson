      <% else %>
      <i class="fa fa-file-pdf-o fa-2x"></i> 
      <% end %>
      &nbsp; <%= project.file2_title %>
    </a><br/>
    <% end %>

    <% if project.file3? %>
    <a href="<%= project.file1.url() %>">
      <% if project.file3_type == 0 %>
      <i class="fa fa-file-word-o fa-2x"></i> 
      <% elsif project.file3_type == 1 %>
      <i class="fa fa-file-excel-o fa-2x"></i> 
      <% elsif project.file3_type == 2 %>
      <i class="fa fa-file-powerpoint-o fa-2x"></i> 
      <% else %>
      <i class="fa fa-file-pdf-o fa-2x"></i> 
      <% end %>
      &nbsp; <%= project.file3_title %>
    </a><br/>
    <% end %>

    <% if project.file4? %>
    <a href="<%= project.file1.url() %>">
      <% if project.file4_type == 0 %>
