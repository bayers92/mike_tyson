
<%= simple_form_for(@user) do |f| %>
    <%= f.error_notification %>


    <%= f.association :school, label: 'Select your school:' %>
    <%= f.input :gradyear, collection: 2015..2019, label: 'Year of Graduation:' %>
    <br/>


    <%= f.input :industry_list, as: :check_boxes, collection: Industry.all, value_method: :name, label_method: :name, input_html: { multiple: true, class: 'taggable' }, label: "Select your concentration(s):"%>


    <%= f.button :submit, 'Save' %>
<% end %>

