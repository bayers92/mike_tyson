<h1>Listing homepage_infos</h1>

<table>
  <thead>
    <tr>
      <th>Homepage header</th>
      <th>Homepage display name</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @homepage_infos.each do |homepage_info| %>
      <tr>
        <td><%= homepage_info.homepage_header %></td>
        <td><%= homepage_info.homepage_display_name %></td>
        <td><%= homepage_info.user %></td>
        <td><%= link_to 'Show', homepage_info %></td>
        <td><%= link_to 'Edit', edit_homepage_info_path(homepage_info) %></td>
        <td><%= link_to 'Destroy', homepage_info, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Homepage info', new_homepage_info_path %>
