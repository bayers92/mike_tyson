
<%= simple_form_for(@user) do |f| %>
    <%= f.error_notification %>


    <%= f.association :school, label: 'Select your school:',  hint: "You must use your school email." %>
    <%= f.input :gradyear, collection: 2015..2019, label: 'Year of Graduation:' %>
    <br/>


    <%= f.input :industry_list, as: :check_boxes, collection: Industry.all.all.order('name ASC'), value_method: :name, label_method: :name, input_html: { multiple: true, class: 'taggable' }, label: "Select your concentration(s):"%>

    <br/><br/>

	<%= f.input :career_list, as: :check_boxes, collection: Career.all.all.order('name ASC'), value_method: :name, label_method: :name, input_html: { multiple: true, class: 'taggable' }, label: "Select your career focus:"%>

    <br/>

    <%= f.button :submit, 'Save' %>
<% end %>

