<%= simple_form_for(@project) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<%= f.input :title, label: 'Title:', placeholder: "The Facebook" %>
  	<%= f.input :paragraph, label: 'Description:', placeholder: "Founder & CEO" %>
  	<%= f.input :file1, label: 'Background Image:' %>
    <br/>
    <p><i> You can have the project link to a website <strong>or</strong> a file: </i></p>
    <%= f.input :url, label: 'URL Link:' %>
    <p> <strong> OR </strong> </p>
    <%= f.input :file2, label: 'File Link:' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
