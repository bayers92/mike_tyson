<%= simple_form_for(@website_setting) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<%= f.input :domain_name, label: "Desired Domain Name:" %>
  	<%= f.input :color, label: "Theme Color:" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
