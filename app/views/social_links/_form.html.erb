<%= simple_form_for(@social_link) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<%= f.input :link_alt_email, label: "Contact Email Address:", placeholder: "Login email used by default" %>
  	<%= f.input :link_linkedin, label: "LinkedIn Profile:", placeholder: "Include http://" %>
  	<%= f.input :link_instagram, label: "Instagram Profile:", placeholder: "Include http://" %>
  	<%= f.input :link_facebook, label: "Facebook Profile:", placeholder: "Include http://" %>
  	<%= f.input :link_twitter, label: "Twitter Profile:", placeholder: "Include http://" %>
  	<%= f.input :link_tumblr, label: "Tumblr Profile:", placeholder: "Include http://" %>
  	<%= f.input :link_github, label: "Github Profile:", placeholder: "Include http://" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
