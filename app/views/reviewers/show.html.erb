<div class = "small-12 medium-12 columns form-yield no-padding">
	<%= render 'application/topNavReviewers' %>
</div>
<div id = "clerk-nav-filler"></div>
<%= render 'application/alerts' %>


<div class = "row clerk-content-container">
	<div id="unapproved" style="display:none">
		<div class = "small-12 medium-12 columns small-centered">
			<% @students = @reviewer.users.where(:approval => 0) %>
			<%= render 'users/userReviewerViewUnapproved' %>
		</div>
	</div>

	<div id="reviewing">
		<div class = "small-12 medium-12 columns small-centered">
			<% @students = @reviewer.users.where(:approval => 1) %>
			<%= render 'users/userReviewerViewReviewing' %>
		</div>
	</div>

	<div id="pending" style="display:none">
		<div class = "small-12 medium-12 columns small-centered">
			<% @students = @reviewer.users.where(:approval => 2) %>
			<%= render 'users/userReviewerViewPending' %>
		</div>
	</div>

	<div id="approved" style="display:none">
		<div class = "small-12 medium-12 columns small-centered">
			<% @students = @reviewer.users.where(:approval => 3) %>
			<%= render 'users/userReviewerViewApproved' %>
		</div>
	</div>
</div>