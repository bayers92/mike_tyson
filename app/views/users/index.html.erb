<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th>Domain name</th>
      <th>Name first</th>
      <th>Name last</th>
      <th>Homepage header</th>
      <th>Intro paragraph</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.domain_name %></td>
        <td><%= user.name_first %></td>
        <td><%= user.name_last %></td>
        <td><%= user.homepage_header %></td>
        <td><%= user.intro_paragraph %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

