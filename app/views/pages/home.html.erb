<% content_for :custom_css do %> 
<style>
.row.hero {
  background: url(<%= asset_path 'brandclub_bg.jpg'%>) no-repeat center center fixed;
  background: linear-gradient( rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5) ),  url(<%= asset_path 'brandclub_bg.jpg'%>);
}
</style>
<% end %>



  <!-- LOADING GRAPHIC PAGE -->
<style>
  /* This only works with JavaScript, 
     if it's not present, don't show loader */
  .no-js #loading_page { display: none;  }
  .js .loading_page { display: block; background-color: white; position: absolute; left: 0px; top: 0px; height: 100%; width: 100%; z-index: 99999;}
</style>





<body>

    <div class = "loading_page" id ="loading_page">
    <h2 id = "loading_title"> BRANDCLUB </h2>
    <div id = "loader">
      <%= image_tag "loader.gif" %>
    </div>
  </div>


  <div class="off-canvas-wrap fixed" data-offcanvas>
    <div class="inner-wrap">

      <!-- MOBILE NAV BAR -->
      <div class = "fixed">
        <nav class="tab-bar show-for-small-only">
          <section class="right-small">
            <a class="right-off-canvas-toggle menu-icon" href="#"><span></span></a>
          </section>
        </nav>
      </div>

      <!-- MOBILE NAVIGATION OFFCANVAS LIST -->
      <aside class="right-off-canvas-menu" aria-hidden="true">
        <ul class="off-canvas-list">
          <li><label></label></li>
          <li><a href="#about"><i class="fa fa-user fa-1x"></i>&nbsp;&nbsp;&nbsp;&nbsp;About</a></li>
          <li><a href="#projects"><i class="fa fa-flask fa-1x"></i>&nbsp;&nbsp;&nbsp;&nbsp;Projects</a></li>
          <li><a href="#blog"><i class="fa fa-newspaper-o fa-1x"></i>&nbsp;&nbsp;&nbsp;&nbsp;Reading List</a></li>
          <li><a href="#photos"><i class="fa fa-instagram fa-1x"></i>&nbsp;&nbsp;&nbsp;&nbsp;Photos</a></li>
          <li><a href="mailto:hi@brandclub.co"><i class="fa fa-envelope-o fa-1x"></i>&nbsp;&nbsp;&nbsp;&nbsp;Contact</a></li>
        </ul>
      </aside>
      <!-- END MOBILE NAV OFFCANVAS -->



      <section class="main-section">
      <%= render 'application/alerts' %>


        <!-- START DESKTOP NAVIGATION -->
        <div class = "heading show-for-medium-up">
          <div class = "small-6 medium-9 columns">
            <div class = "logo">
              <a href="/">
                <%= image_tag "brandclub_logo.png" %>
              </a>
            </div>
          </div>
          <div class = "small-6 medium-3 columns devise_links text-right fixed">
            <% if user_signed_in? %>
            <%= button_to "View Profile", edit_user_path(current_user), :class => "button round custom", :method => :get  %>      
            <% else %>
            <%= button_to "Login", new_user_session_path, :class => "button round custom",  method: :get %>
            <% end %>
          </div>
        </div>
        <!-- END NAVIGATION -->




        <!-- START hero row -->
        <div class = "row hero">
          <div class = "small-12 medium-offset-6 medium-3 columns small-text-center medium-text-left logo">
            <a href="#about">
              <h1 class = "opening">DEFINE <br/>YOUR<br/> BRAND<br/></h1>
            </a>
          </div>
        </div>
        <!-- END hero row -->


        <!-- START ABOUT SECTION -->

        <div class ="content section">
          
        </div>
        <!-- END ABOUT SECTION   -->



        <!-- START PROJECT SECTION -->
        <div class = "content section">
          
        </div>
            <!-- END PROJECT SECTION -->


        <!-- START BLOG SECTION -->
        <div class = "content section blog">
          
        </div>
        <!-- END BLOG SECTION -->


        <!-- START INSTAGRAM SECTION -->
        <div class = "content section photos">
          
        </div>
        <!-- END INSTAGRAM SECTION -->

        <!-- START FOOTER SECTION -->
        <div class = "footer section">
          <div class = "row">
            <div class = "small-12 large-4 small-centered columns">
              <div class = "icons">

               
              </div>
            </div>
            <div class = "small-12 large-8 small-centered columns">
              <a href="mailto:hi@brandclub.co"><i class="fa fa-envelope-o fa-1x"></i> &nbsp; hi@brandclub.co </a>
            </div>    
          </div>
        </div>
        <!-- END FOOTER SECTION -->
      </section> 
      <!-- END MAIN SECTION -->
      <a class="exit-off-canvas"></a>
    </div>
    <!-- END OFF-CANVAS WRAP -->
  </body>