<div class = "row">
  <div class = "small-12 columns">
<h1>Listing schools</h1>

<div class = "row">
  <div class = "small-12 columns">
    <%= link_to 'View all users', users_path %>
  </div>
</div>

<table>
  <thead>
    <tr>
      <th> School Name </th>
      <th> Number of Students </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.name %> </td>
        <td><strong><%= school.users.count %> </strong> | <%= link_to 'View Students', school_roster_path(school)%></td>
        <td><%= link_to 'School', school %></td>
        <td><%= link_to 'Edit', edit_school_path(school) %></td>
        <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New School', new_school_path %>

</div>
</div>